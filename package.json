{
  "name": "ws-tool",
  "version": "1.0.0",
  "description": "A Develop Tool to Test WebSocket, Socket.IO, Stomp, HTTP, TCP, UDP API.",
  "main": "index.js",
  "scripts": {
    "bundle-vendor-css": "cleancss ./node_modules/bootstrap/dist/css/bootstrap.min.css ./node_modules/github-fork-ribbon-css/gh-fork-ribbon.css -o vendor.bundle.css",
    "bundle-index-css": "cleancss index.css -o index.bundle.css",
    "clean-rev": "rm -f vendor.bundle-*.js vendor.bundle-*.css index.bundle-*.js index.bundle-*.css",
    "rev": "npm run clean-rev && rev-static",
    "build": "npm run bundle-vendor-css && npm run bundle-index-css && tsc && npm run minifier-template && webpack --display-modules && npm run rev && webpack --display-modules --config webpack.config.worker.js",
    "lint": "tslint \"*.ts\"",
    "minifier-template": "html-minifier --collapse-whitespace --case-sensitive app.template.html -o app.html",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plantain-00/ws-tool.git"
  },
  "author": "York Yao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plantain-00/ws-tool/issues"
  },
  "homepage": "https://github.com/plantain-00/ws-tool#readme",
  "dependencies": {
    "compression": "1.6.2",
    "express": "4.14.1",
    "node-fetch": "1.6.3",
    "uws": "0.13.0"
  },
  "devDependencies": {
    "@types/clipboard": "1.5.31",
    "@types/compression": "0.0.33",
    "@types/express": "4.0.35",
    "@types/node": "7.0.5",
    "@types/node-fetch": "1.6.7",
    "@types/socket.io-parser": "0.0.2",
    "@types/uws": "0.0.0",
    "bootstrap": "3.3.7",
    "clean-css-cli": "4.0.8",
    "clipboard": "1.6.1",
    "ejs": "2.5.6",
    "github-fork-ribbon-css": "0.2.1",
    "html-minifier": "3.4.0",
    "protobufjs": "6.6.4",
    "raw-loader": "0.5.1",
    "rev-static": "2.1.1",
    "socket.io-parser": "2.3.2",
    "tslint": "4.5.1",
    "typescript": "2.2.1",
    "vue": "2.2.1",
    "vue-class-component": "5.0.0",
    "webpack": "2.2.1",
    "webrtc-adapter": "3.1.6"
  }
}
