{
  "name": "ws-tool",
  "version": "1.0.0",
  "description": "A websocket/socket.io api test tool.",
  "main": "index.js",
  "scripts": {
    "bundle-common-js": "uglifyjs ./node_modules/vue/dist/vue.min.js ./node_modules/clipboard/dist/clipboard.min.js ./node_modules/tether/dist/js/tether.min.js ./node_modules/tether-shepherd/dist/js/shepherd.min.js vendor.bundle.js -o common.bundle.js",
    "bundle-common-js-debug": "cat ./node_modules/vue/dist/vue.js ./node_modules/clipboard/dist/clipboard.js ./node_modules/tether/dist/js/tether.js ./node_modules/tether-shepherd/dist/js/shepherd.js vendor.bundle.js > common.bundle.js",
    "bundle-common-css": "cleancss ./node_modules/bootstrap/dist/css/bootstrap.min.css ./node_modules/github-fork-ribbon-css/gh-fork-ribbon.css node_modules/tether/dist/css/tether.min.css ./node_modules/tether-shepherd/dist/css/shepherd-theme-arrows.css ./node_modules/hint.css/hint.min.css -o common.bundle.css",
    "bundle-common-css-debug": "cat ./node_modules/bootstrap/dist/css/bootstrap.css ./node_modules/github-fork-ribbon-css/gh-fork-ribbon.css node_modules/tether/dist/css/tether.css ./node_modules/tether-shepherd/dist/css/shepherd-theme-arrows.css ./node_modules/hint.css/hint.css > common.bundle.css",
    "bundle-index-css": "cleancss index.css -o index.bundle.css",
    "bundle-index-css-debug": "cat index.css > index.bundle.css",
    "clean": "rm -f common.bundle.js common.bundle.css index.bundle.js index.bundle.css index.js index.js.map vendor.js vendor.js.map vendor.bundle.js template.html",
    "clean-rev": "rm -f common.bundle-*.js common.bundle-*.css index.bundle-*.js index.bundle-*.css",
    "rev": "npm run clean-rev && rev-static common.bundle.css index.bundle.css common.bundle.js index.bundle.js index.ejs.html -o index.html -- --rmWhitespace",
    "build": "npm run bundle-common-css && npm run bundle-index-css && tsc && npm run minifier-template && webpack --display-modules && npm run bundle-common-js && npm run rev && npm run clean",
    "build-debug": "npm run bundle-common-css-debug && npm run bundle-index-css-debug && tsc && npm run minifier-template-debug && webpack --display-modules --config webpack.config.debug.js && npm run bundle-common-js-debug && npm run rev && npm run clean",
    "lint": "tslint index.ts",
    "minifier-template": "html-minifier --collapse-whitespace --case-sensitive template.raw.html -o template.html",
    "minifier-template-debug": "html-minifier --case-sensitive template.raw.html -o template.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plantain-00/ws-tool.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/plantain-00/ws-tool/issues"
  },
  "homepage": "https://github.com/plantain-00/ws-tool#readme",
  "dependencies": {
    "github-fork-ribbon-css": "^0.2.1",
    "socket.io-parser": "^2.2.6",
    "vue-typescript": "^0.7.0"
  },
  "devDependencies": {
    "@types/clipboard": "^1.5.28",
    "@types/node": "^6.0.38",
    "@types/socket.io-parser": "0.0.1",
    "@types/tether-shepherd": "^1.2.26",
    "@types/vue": "^1.0.29",
    "bootstrap": "^3.3.7",
    "clean-css": "^3.4.20",
    "clipboard": "^1.5.12",
    "ejs": "^2.5.2",
    "hint.css": "^2.4.0",
    "html-minifier": "^3.1.0",
    "raw-loader": "^0.5.1",
    "rev-static": "^1.2.0",
    "tether-shepherd": "^1.8.1",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3",
    "uglify-js": "^2.7.3",
    "vue": "^2.0.1",
    "webpack": "^1.13.2"
  }
}